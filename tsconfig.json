{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"lib": ["esnext"],
		"declaration": true,
		"declarationMap": false,
		"emitDeclarationOnly": true,
		"outDir": "./dist/types",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": false,
		"allowJs": true,
		"checkJs": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "src/**/*.test.js", "types/**/*", "dist/**/*"]
}
